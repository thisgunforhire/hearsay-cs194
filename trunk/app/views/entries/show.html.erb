<head>
   <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>hearsay! - collaborative photo sharing and gossiping of hte local community</title>
  <%= javascript_include_tag 'shadedBorder' %>
  <%= javascript_include_tag 'shadedBorderVar' %>
</head>
<body id="comments">
<p>
   <t1><%=h @entry.title %></t1>
</p>
<p>
<br>
  <%=h @entry.description %>
</p>

<p align="center">
  <img src="<%=h @entry.picture%>">
</p>

<p>
  <b>Category:</b>
  <%=h @entry.category %>
</p>

<p><b>Comments:</b>
<div id="shadowed-border2" class="sb">
<div id="comment">
<% for comment in @comments %>
<p>
<%= comment.comment %>
<br><subs>USERNAME | DATE_POSTED</subs>
</p>
<hr>

<% end %>
</div>
</p>
</div>
<p>
<%= link_to 'post a new comment', new_entry_comment_url(@entry) %>  | 
<%= link_to 'edit entry', edit_entry_path(@entry) %> |
<%= link_to 'back to entries', entries_path %>
</p>

</body>
</html>